<h2>
    <%= @post.title %>
</h2>
<p>
    <%= simple_format @post.body %>
</p>

<h3>
    Comments
</h3>

<% if @post.comments.any? %>
<ul>
    <% @post.comments.each do |comments| %>
    <li>
        <%= comments.body %>
        <%= link_to '[Ã—]',
            post_comment_path(@post,comments),
            method: :delete,
